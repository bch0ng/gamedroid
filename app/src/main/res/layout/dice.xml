<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
                                             xmlns:app="http://schemas.android.com/apk/res-auto"
                                             xmlns:tools="http://schemas.android.com/tools"
                                             android:layout_width="match_parent"
                                             android:layout_height="match_parent">
    <RelativeLayout
            android:id="@+id/root_dice_layout"
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="match_parent">
        <include
                android:visibility="visible"
                android:layout_marginTop="5dp"
                android:layout_centerHorizontal="true"
                android:layout_width="wrap_content"
                android:layout_height="140dp"
                layout="@layout/dice_img"
                android:id="@+id/player_dice"
        />
        <LinearLayout android:layout_width="wrap_content"
                      android:layout_height="wrap_content"
                      android:visibility="invisible"
                      tools:visibility="visible"
                      android:layout_centerHorizontal="true"
                      android:layout_below="@id/player_dice"
                      android:id="@+id/dice_turn_view"
        >
            <TextView
                    android:text="N's Turn"
                    android:id="@+id/turn_text_view"
                    android:textSize="50sp"
                    android:layout_width="wrap_content" android:layout_height="wrap_content"/>
        </LinearLayout>
        <ScrollView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="5dp"
                android:layout_below="@id/dice_turn_view"
        >
            <LinearLayout
                    android:orientation="vertical"
                    android:id="@+id/opponent_dice"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
            >
            </LinearLayout>
        </ScrollView>
        <include
                android:visibility="gone"
                tools:visibility="invisible"
                android:layout_centerInParent="true"
                android:layout_width="170dp"
                android:layout_height="wrap_content"
                layout="@layout/postgame_buttons"
                android:id="@+id/postgame_buttons"
        />
    </RelativeLayout>
</android.support.constraint.ConstraintLayout>