<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
             xmlns:app="http://schemas.android.com/apk/res-auto" xmlns:tools="http://schemas.android.com/tools"
             android:layout_width="match_parent"
             android:layout_height="match_parent"
             tools:context="game.ScoreBoardFragment">
    <android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
                                                 xmlns:app="http://schemas.android.com/apk/res-auto"
                                                 xmlns:tools="http://schemas.android.com/tools"
                                                 android:layout_width="match_parent"
                                                 android:layout_height="match_parent"
                                                 tools:layout_editor_absoluteY="81dp">


        <android.support.v7.widget.RecyclerView
                android:layout_width="246dp"
                android:layout_height="302dp"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintHorizontal_bias="0.5" app:layout_constraintEnd_toEndOf="parent"
                android:layout_marginTop="24dp" app:layout_constraintTop_toTopOf="parent"
                android:id="@+id/recyclerView">
        </android.support.v7.widget.RecyclerView>
        <Button
                android:text="Restart"
                android:layout_width="0dp"
                android:layout_height="60dp" android:id="@+id/buttonRestart"
                app:layout_constraintTop_toBottomOf="@+id/recyclerView" app:layout_constraintStart_toStartOf="parent"
                android:layout_marginStart="16dp"
                android:layout_marginEnd="16dp" android:background="@drawable/rounded_button" android:backgroundTint="#2196F3"
                android:textColor="@color/common_google_signin_btn_text_dark_default" android:layout_marginTop="16dp"
                app:layout_constraintEnd_toEndOf="parent"/>
        <Button
                android:text="New Game"
                android:layout_width="0dp"
                android:layout_height="60dp" android:id="@+id/buttonNew"
                android:background="@drawable/rounded_button"
                android:backgroundTint="#FFC107"
                android:textColor="@color/common_google_signin_btn_text_dark_default"
                android:layout_marginStart="16dp"
                app:layout_constraintStart_toStartOf="parent" android:layout_marginEnd="16dp"
                app:layout_constraintEnd_toEndOf="parent" android:layout_marginTop="16dp"
                app:layout_constraintTop_toBottomOf="@+id/buttonRestart"/>
        <Button
                android:text="End Game"
                android:layout_width="0dp"
                android:layout_height="60dp" android:id="@+id/buttonEnd"
                android:layout_marginTop="16dp"
                app:layout_constraintTop_toBottomOf="@+id/buttonNew" app:layout_constraintStart_toStartOf="parent"
                android:layout_marginStart="16dp" app:layout_constraintEnd_toEndOf="parent"
                android:layout_marginEnd="16dp" android:textColor="@color/common_google_signin_btn_text_dark_default"
                android:background="@drawable/rounded_button"
                android:backgroundTint="#F44336"/>
    </android.support.constraint.ConstraintLayout>

</FrameLayout>