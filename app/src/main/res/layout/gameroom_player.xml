<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:orientation="horizontal"
        android:paddingTop="12dp"
        android:paddingBottom="12dp">
    <TextView
            android:id="@+id/player_name_text_view"
            android:text=""
            android:textSize="24sp"
            android:gravity="left"
            android:paddingLeft="60dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:fontFamily="@font/lato_bold"/>
    <ImageView
            android:id="@+id/user_identity_extra"
            android:visibility="invisible"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:layout_marginRight="12dp"
            android:background="@drawable/circle_button"
            android:backgroundTint="@android:color/holo_orange_dark"
            android:layout_gravity="right"
            android:scaleType="centerInside"
            android:src="@drawable/baseline_edit_location_white_36" />
    <ImageView
            android:id="@+id/user_identity"
            android:visibility="invisible"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:layout_marginRight="12dp"
            android:background="@drawable/circle_button"
            android:backgroundTint="@android:color/holo_blue_dark"
            android:layout_gravity="right"
            android:scaleType="centerInside"
            android:src="@drawable/baseline_person_pin_circle_white_36" />
</LinearLayout>