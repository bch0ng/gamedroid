<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
                                             xmlns:app="http://schemas.android.com/apk/res-auto"
                                             xmlns:tools="http://schemas.android.com/tools"
                                             android:layout_width="match_parent"
                                             android:layout_height="match_parent" tools:layout_editor_absoluteY="81dp">

    <android.support.v7.widget.RecyclerView
            android:layout_width="246dp"
            android:layout_height="302dp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintHorizontal_bias="0.5" app:layout_constraintEnd_toEndOf="parent"
            android:layout_marginTop="64dp" app:layout_constraintTop_toTopOf="parent" android:id="@+id/recyclerView">
    </android.support.v7.widget.RecyclerView>
    <Button
            android:text="Restart"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" android:id="@+id/buttonRestart"
            android:layout_marginTop="96dp"
            app:layout_constraintTop_toBottomOf="@+id/recyclerView" app:layout_constraintStart_toStartOf="parent"
            android:layout_marginStart="16dp" app:layout_constraintEnd_toStartOf="@+id/buttonNew"
            android:layout_marginEnd="16dp"/>
    <Button
            android:text="New Game"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" android:id="@+id/buttonNew"
            android:layout_marginTop="96dp"
            app:layout_constraintTop_toBottomOf="@+id/recyclerView" app:layout_constraintEnd_toEndOf="parent"
            android:layout_marginEnd="16dp" app:layout_constraintStart_toEndOf="@+id/buttonRestart"
            android:layout_marginStart="16dp"/>
</android.support.constraint.ConstraintLayout>