<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
                                             xmlns:app="http://schemas.android.com/apk/res-auto"
                                             xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
                                             android:layout_height="match_parent">
    <LinearLayout
            android:orientation="vertical"
            android:layout_height="wrap_content"
            android:layout_width="0dp"
            android:id="@+id/linearLayout3"
            app:layout_constraintStart_toStartOf="parent" app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="parent" android:layout_marginTop="32dp"
            android:layout_marginStart="16dp" android:layout_marginEnd="16dp" android:gravity="center">
        <TextView
                android:textSize="36sp"
                android:text="@string/instructions_header"
                android:layout_width="wrap_content" android:layout_height="wrap_content"
                android:id="@+id/textView"
                android:layout_marginTop="32dp"
                android:layout_marginStart="16dp" android:fontFamily="@font/lato_bold"
                android:layout_marginEnd="16dp" android:textColor="#2196F3" android:gravity="center" android:layout_marginBottom="20dp"/>
        <Button
                android:id="@+id/instructions_pick_up_phone"
                android:text="Pick up the phone"
                android:layout_gravity="center_horizontal"
                android:layout_width="match_parent" android:fontFamily="@font/lato_bold"
                android:layout_height="match_parent" android:gravity="center" android:layout_marginBottom="20dp"/>
        <Button
                android:id="@+id/instructions_flip_phone"
                android:text="Flip the phone"
                android:layout_gravity="center_horizontal" android:layout_marginBottom="20dp"
                android:layout_width="match_parent" android:fontFamily="@font/lato_bold"
                android:layout_height="match_parent" android:gravity="center"/>
        <Button
                android:id="@+id/instructions_roll_dice"
                android:text="Roll the dice"
                android:layout_gravity="center_horizontal" android:fontFamily="@font/lato_bold"
                android:layout_width="match_parent" android:layout_marginBottom="20dp"
                android:layout_height="match_parent" android:gravity="center"/>
        <Button
                android:id="@+id/instructions_shake_soda"
                android:text="Shake the soda"
                android:layout_gravity="center_horizontal" android:fontFamily="@font/lato_bold"
                android:layout_width="match_parent" android:layout_marginBottom="20dp"
                android:layout_height="match_parent" android:gravity="center"/>
    </LinearLayout>
</android.support.constraint.ConstraintLayout>