<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent" android:layout_height="match_parent"
        tools:context="game.GamelistFragment">
    <LinearLayout
            android:orientation="vertical"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:id="@+id/singlelinearlayout" app:layout_constraintEnd_toEndOf="parent"
            android:layout_marginEnd="16dp" app:layout_constraintStart_toStartOf="parent"
            android:layout_marginStart="16dp" app:layout_constraintTop_toTopOf="parent" android:layout_marginTop="16dp">
        <Button
                android:text="game2s"
                android:background="@drawable/rounded_button"
                android:textColor="@color/common_google_signin_btn_text_dark_pressed"
                android:layout_margin="16dp"
                android:layout_width="match_parent"
                android:layout_height="60dp" android:id="@+id/buttongame1"/>
        <Button
                android:text="game1s"
                android:background="@drawable/rounded_button"
                android:textColor="@color/common_google_signin_btn_text_dark_pressed"
                android:layout_margin="16dp"
                android:layout_width="match_parent"
                android:layout_height="60dp" android:id="@+id/buttongame2"/>
    </LinearLayout>
    <Button
            android:text="Start"
            android:layout_width="0dp"
            android:backgroundTint="@android:color/holo_green_light"
            android:drawableRight="@drawable/baseline_check_white_48"
            android:paddingRight="16dip"
            android:layout_height="60dp" android:id="@+id/buttonstart"
            app:layout_constraintTop_toBottomOf="@+id/singlelinearlayout" android:layout_marginTop="72dp"
            app:layout_constraintEnd_toEndOf="parent" android:layout_marginEnd="32dp"
            app:layout_constraintStart_toStartOf="parent" android:layout_marginStart="32dp"
            android:textColor="@color/common_google_signin_btn_text_dark_default"
            app:layout_constraintHorizontal_bias="0.0" android:background="@drawable/rounded_button"/>
</android.support.constraint.ConstraintLayout>