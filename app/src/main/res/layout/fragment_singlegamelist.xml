<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent" android:layout_height="match_parent"
        tools:context="game.GamelistFragment">
    <LinearLayout
            android:orientation="vertical"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:id="@+id/singlelinearlayout" app:layout_constraintEnd_toEndOf="parent"
            android:layout_marginEnd="16dp" app:layout_constraintStart_toStartOf="parent"
            android:layout_marginStart="16dp" app:layout_constraintTop_toTopOf="parent" android:layout_marginTop="16dp">
        <Button
                android:text="game2s"
                android:layout_width="match_parent"
                android:layout_height="wrap_content" android:id="@+id/buttongame1s"/>
        <Button
                android:text="game1s"
                android:layout_width="match_parent"
                android:layout_height="wrap_content" android:id="@+id/buttongame2s"/>
    </LinearLayout>
    <Button
            android:text="Start"
            android:layout_width="0dp"
            android:layout_height="wrap_content" android:id="@+id/buttonsinglestart"
            app:layout_constraintTop_toBottomOf="@+id/singlelinearlayout" android:layout_marginTop="72dp"
            app:layout_constraintEnd_toEndOf="parent" android:layout_marginEnd="16dp"
            app:layout_constraintStart_toStartOf="parent" android:layout_marginStart="16dp"
            android:textColor="@color/common_google_signin_btn_text_dark_default"
            app:layout_constraintHorizontal_bias="0.0" android:background="#03A9F4"/>
</android.support.constraint.ConstraintLayout>